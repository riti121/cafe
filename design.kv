WindowManager:
    Home:
    Questions:
    Description:
    CareerOptions:
    Strengths:
    Report:
    ChatWindow:

<Home>:
    first:first
    name: 'home' 
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: " Welcome to Cafe Buddy"
            text_size: root.width, None
            halign: 'center'
        Button:
            size: self.texture_size
            text_size: root.width, None
            id: first
            size_hint: 1,0.2
            halign: 'center'
            text: " Explore your personality "
            on_release: 
                app.root.current = "quest"
                root.manager.transition.direction = "left" 
        
        Button:
            size: self.texture_size
            text_size: root.width, None
            id: second
            size_hint: 1,0.2
            halign: 'center'
            text: " Chat with Smart Cousellor "
            on_release: 
                app.root.current = "camera"
                root.manager.transition.direction = "left" 
            


<Questions>:

    question_1: question_1
    question_2: question_2
    name: 'questions'
    GridLayout:
        cols:1 
        Label:
            id: per
            text: " Choose the one that suits you the best!"
            halign : 'center'
            size: self.texture_size
            text_size: root.width, None
        Button: 
            id: question_1
            text: "1. a. expend energy, enjoy groups"
            size: self.texture_size
            text_size: root.width, None
            halign: 'center'
            on_release:
                root.ask_question1()
        Button:
            id: question_2
            size: self.texture_size
            text_size: root.width, None
            halign: 'center'
            text: "b. conserve energy, enjoy one-on-one"
            on_release: 
                root.ask_question2()

<Description>:
    persona:persona
    detail:detail
    name: 'description' 
    BoxLayout:
        orientation: 'vertical'
        
        Label:
            id: persona
            text: ""
            size_hint:1,0.2
        
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            Label:
                size_hint_y:None
                height: self.texture_size[1]
                text_size : self.width, None
                padding: 10,10
                id: detail
                text: ""

        GridLayout:
            size_hint:1,0.1
            cols:2
            Button:
                text: "Back"
                size: self.texture_size
                text_size: root.width, None
                halign: 'center'
                on_release: 
                    app.root.current = "rep"
                    root.manager.transition.direction = "left"
            Button:
                text: "HomePage"
                size: self.texture_size
                text_size: root.width, None
                halign: 'center'
                on_release: 
                    app.root.current = "home"
                    root.manager.transition.direction = "left"  


